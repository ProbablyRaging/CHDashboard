<!-- End Header -->

<!-- Start Body -->

<body>
    <div id="page-mount container-fluid">
        <div class="page-div container-fluid">

            <div class="main-menu" id="main-menu-visible">
                <div class="nav-logo-div">
                    <button class="fa-solid fa-arrow-right-to-bracket nav-toggle-button" id="navbar-hide"></button>
                    <img src="https://cdn.discordapp.com/icons/820889004055855144/a_aabe3c2a811fb30195d2cf76b9aaa437.gif"
                        class="nav-logo" id="nav-logo">
                    <p id="nav-text-one">CH</p>
                    <p id="nav-text-two">Dashboard</p>
                </div>

                <ul>
                    <li>
                        <a href="/apply">
                            <i class="fa fa-clipboard-user fa-2x"></i>
                            <span class="nav-text" id="nav-text">
                                Staff Application
                            </span>
                        </a>
                    </li>
                </ul>

                <ul class="logout">
                    <li>
                        <a href="/auth/logout">
                            <i class="fa fa-power-off fa-2x"></i>
                            <span class="nav-text" id="nav-text">
                                Logout
                            </span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="page-content content-body !overflow-hidden">
                <%- include('partials/topbar') -%>
                    <%- include('partials/container') -%>

                        <!-- Content Box -->
                        <div class="content-box">
                            <div class="content-box-div">

                                <!-- Content Box Inner -->
                                <header class="content-box-title-class">
                                    <div class="content-box-title-flex">
                                        <h5 class="content-box-title-decor">
                                            <div class="content-box-title">Staff Application</div>

                                        </h5>
                                    </div>
                                </header>

                                <hr class="content-box-separator">

                                <div>
                                    <div class="content-box-content-row">

                                        <!-- Form -->
                                        <form class="submit-form content-box-content-row" id="staff-form"
                                            action="/apply" method="post">
                                            <div class="mb-3-staff">
                                                <input name="username" id="rule-input" role="textbox"
                                                    class="bg-grey-700 rounded-lg py-4 pl-4 pr-10 text-base leading-loose focus:ring-opacity-30 focus:border-blue-default focus:ring-[4px] focus:ring-blue-default undefined content-box-textbox-sm"
                                                    data-slate-editor="true" data-slate-node="value"
                                                    contenteditable="true" zindex="-1"
                                                    style="position: relative; outline: none; white-space: pre-wrap; overflow-wrap: break-word;"
                                                    spellcheck="false" value="<%= username %>" disabled required>
                                            </div>

                                            <select name="age" class="form-select content-box-select" id="rule-selector"
                                                required>
                                                <option class="select-option" value="" selected disabled>Age
                                                </option>
                                                <option class="select-option" value="13-17">13-17
                                                </option>
                                                <option class="select-option" value="18-29">18-29
                                                </option>
                                                <option class="select-option" value="30+">30+
                                                </option>
                                            </select>

                                            <div class="mb-3-staff">
                                                <input name="region" id="rule-input" role="textbox"
                                                    class="bg-grey-700 rounded-lg py-4 pl-4 pr-10 text-base leading-loose focus:ring-opacity-30 focus:border-blue-default focus:ring-[4px] focus:ring-blue-default undefined content-box-textbox-sm"
                                                    data-slate-editor="true" data-slate-node="value"
                                                    contenteditable="true" zindex="-1"
                                                    style="position: relative; outline: none; white-space: pre-wrap; overflow-wrap: break-word;"
                                                    spellcheck="false" placeholder="Region: (E.g. Australia)" required>
                                            </div>

                                            <div class="mb-3-staff">
                                                <textarea name="about" id="rule-input" role="textbox"
                                                    class="bg-grey-700 !min-h-[112px] rounded-lg py-4 pl-4 pr-10 text-base leading-loose focus:ring-opacity-30 focus:border-blue-default focus:ring-[4px] focus:ring-blue-default undefined content-box-textbox"
                                                    data-slate-editor="true" data-slate-node="value"
                                                    contenteditable="true" zindex="-1"
                                                    style="position: relative; outline: none; white-space: pre-wrap; overflow-wrap: break-word;"
                                                    spellcheck="false"
                                                    placeholder="Tell us something about yourself, why you want to be staff, if you have any previous experience, etc.."
                                                    required></textarea>
                                            </div>

                                            <div>
                                                <button type="submit" class="btn btn-primary submit-btn"
                                                    id="liveToastBtn">Save</button>
                                            </div>
                                        </form>

                                        <!-- Toast -->
                                        <div class="toast-container position-fixed bottom-0 end-0 p-3">
                                            <div id="liveToast" class="toast" role="alert" aria-live="assertive"
                                                aria-atomic="true">
                                                <div class="toast-body text-light bg-primary">
                                                    Application submitted
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>
                            <!--  -->

                        </div>
            </div>
            <!--  -->

            <script>
                const staffForm = document.getElementById('staff-form');
                staffForm.addEventListener('submit', handleSubmit);

                function handleSubmit(event) {
                    event.preventDefault();
                    submitTimer = setTimeout(() => {
                        this.submit();
                    }, 2000)
                };

                const toastTrigger2 = document.getElementById('liveToastBtn');
                const toastLiveExample2 = document.getElementById('liveToast');

                if (toastTrigger2) {
                    toastTrigger2.addEventListener('click', () => {
                        const toast2 = new bootstrap.Toast(toastLiveExample2);

                        toast2.show();
                    });
                }
            </script>

            <%- include('partials/footer') -%>